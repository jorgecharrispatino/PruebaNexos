@model IEnumerable<PruebaNexos.Data.DTOs.AutorDTO>

@{
    ViewData["Title"] = "Autores";
}

<div class="row" style="width: 100%;">
    <div class="col-9">
        <h2 class="letra">Listado de Autores</h2>
    </div>
    <div class="col-3 text-right">
        <button type="button" class="btn btn-success" title="Crear Autor" data-toggle="modal" 
            data-target="#createModal" onclick="limpiarFormulario()">
            <i class="bi bi-person-plus"></i>
        </button>
        <button type="button" class="btn btn-primary" title="Refrescar tabla" onclick="history.go(0)">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
    </div>
    <hr />
</div>
<!--Tabla de autor-->
<table id="table_id" class="table table-striped table-sm table-hover" style="width:100%">
    <thead>
        <tr>
            <th>IDAUTOR</th>
            <th>NOMBRE</th>
            <th>FECHANACI</th>
            <th>CIUDAD</th>
            <th>CORREO</th>
            @*<th style="width: 200px;">Acciones</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="@item.IDAUTOR">
                <td>
                    @Html.DisplayFor(modelItem => item.IDAUTOR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NOMBRE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FECHANACI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CIUDAD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CORREO)
                </td>
@*                <td>
                    <div class="row justify-content-evenly">
                        <div class="col-12 col-xxl-3 mt-sm-1 pe-xxl-0">
                            <button type="button" class="btn btn-primary p-1" style="width: 100%"
                                    data-toggle="modal" data-target="#editModal" title="Editar Autor"
                                    onclick="llenarFormulario('@item.IDAUTOR')">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                        </div>*
                    </div>
                </td>*@
            </tr>
         }
    </tbody>
</table>

