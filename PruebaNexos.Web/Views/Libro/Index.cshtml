@model IEnumerable<PruebaNexos.Data.DTOs.LibroDTO>

@{
    ViewData["Title"] = "Libros";
}

<div class="row" style="width: 100%;">
    <div class="col-9">
        <h2 class="letra">Listado de Libros</h2>
    </div>
    <div class="col-3 text-right">
        <button type="button" class="btn btn-success" title="Crear Libro" data-toggle="modal" 
            data-target="#createModalLibro" onclick="limpiarFormulario()">
            <i class="bi bi-person-plus"></i>
        </button>
        <button type="button" class="btn btn-primary" title="Refrescar tabla" onclick="history.go(0)">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
    </div>
    <hr />
</div>
<!--Tabla de libro-->
<table id="table_id" class="table table-striped table-sm table-hover" style="width:100%">
    <thead>
        <tr>
            <th>TITULO</th>
            <th>AÑO</th>
            <th>GENERO</th>
            <th>NUMPAG</th>
            <th>AUTOR</th>
            @*<th style="width: 200px;">Acciones</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="@item.IDLIBRO">
                <td>
                    @Html.DisplayFor(modelItem => item.TITULO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ANO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GENERO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NUMPAG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AUTOR)
                </td>
            </tr>
         }
    </tbody>
</table>

<!-- Modal Crear-->
<partial name="_ModalCreatelibro" />
